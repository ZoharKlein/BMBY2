<%-include("home-partials/header") -%>

<title><%=title%></title>

<%-include("home-partials/navbar") -%>

<div class="container">
    <div class="row d-flex align-items-center hero">
        <div class="col-sm">
            <h1 class="hero-title mb-4">Sign Up

            <% if (typeof errMsg !== "undefined") { %>

                <label for=""><%=errMsg%></label>

            <% } %>
            <form action="/login" method="post">

                <input value="<%= loginData.email %>" placeholder="Email" type="text" name="email">

                <input value="<%= loginData.password %>" placeholder="Password" type="password" name="password">

            <button type="submit">Login</button>

            </form>

            <form action="/facebook" method="post">

                <button type="submit">Facebook</button>

            </form>

        </div>

    </div>
</div>

<%-include("home-partials/footer") -%>