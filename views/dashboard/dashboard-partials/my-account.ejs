<h1><%= content %></h1>

    <table>
        
        <tr>

            <td>Company Name</td> <td> <%= customer.companyName%> </td>
        
        </tr>
        

        <tr>
        
                <td>Email</td> <td> <%= customer.email%> </td>

        </tr>

        <tr>
        
                <td>Expiry Date</td> <td> <%= `${customer.expDate.getDate()} - ${customer.expDate.getMonth() + 1} - ${customer.expDate.getFullYear()} ` %> </td>

        </tr>

        <tr>
        
                <td>Days To Expire</td> <td> <%=  daysLeft %> </td>

        </tr>


    </table>

    <% if (daysLeft < 30 ) { %>
        <h2>Renew now (you have less than 30 dayes left)</h2>
            <%-include("price-menu") -%>

    <% } %> 


    <h2>Change Password</h2>
    <form action="/dashboard/account" method="post">
        
        <h3><%=errMsg%></h3>
        <input placeholder="Old Password" type="password" name="oldPassword" value="">
        <br>
        <input placeholder="New Password" type="password" name="newPassword" value="">
        <br>
        <input placeholder="New Password Confirmed" type="password" name="newPasswordConfirmed" value="">
        <br>
        <button type="submit">Change Password</button>

    </form>