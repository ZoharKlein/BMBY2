 <!-- Modal -->
 <div class="modal fade" id="newlead-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
   aria-hidden="true">
   <div class="modal-dialog" role="document">
     <div class="modal-content">
       <div class="modal-header">
         <h2 class="modal-title mb-4" id="exampleModalLabel">New Lead</h2>
         <button type="button" class="close" data-dismiss="modal" aria-label="Close">
           <span aria-hidden="true">&times;</span>
         </button>
       </div>
       <div class="modal-body">

         <form action="#" method="post" >

          <div class="form-group">
            <input type="text" name="leadname" class="form-control" required>
            <label class="form-control-placeholder" for="leadname">First Name</label>
          </div>
          <div class="form-group">
            <input type="text" name="leadlast" class="form-control" required>
            <label class="form-control-placeholder" for="leadlast">Last Name</label>
          </div>
          <div class="form-group">
            <input type="text" name="leadphone" class="form-control" required>
            <label class="form-control-placeholder" for="leadphone">Phone Number</label>
          </div>
          <div class="form-group">
            <input type="text" name="leadmail" class="form-control" required>
            <label class="form-control-placeholder" for="leadmail">Email</label>
          </div>
          <div class="form-group">
            <input type="text" name="leadinfo" class="form-control" required>
            <label class="form-control-placeholder" for="leadinfo">More Info</label>
          </div>

           <button type="submit" class="btn btn-success btn-block btn-lg modal-btn">Insert Lead</button>
                   
         </form>
         

       </div>
     </div>
   </div>
 </div>